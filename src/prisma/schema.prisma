generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum personaTypes {
  PASSPORTBRO
  DIGITALNOMAD
  EXPAT
  TOURIST
  BACKPACKER
}

model Users {
  id            Int       @id @default(autoincrement()) @unique
  email         String    @unique
  password      String 
  created_At    DateTime  @default(now())
  bio           String    @db.Text
  persona       personaTypes?
  jobTitle      String
  companyName   String
}
